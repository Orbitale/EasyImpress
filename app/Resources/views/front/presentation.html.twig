{% extends 'base.html.twig' %}

{% block bodyClass %}impress-not-supported{% endblock %}

{% block css %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('css/slides.css') }}" />
    <style type="text/css">
        .step.future,
        .step.past {
            opacity: {{ presentation.inactiveOpacity }};
        }
    </style>
{% endblock %}

{% block navigation %}{% endblock %}
{% block contentWrapper %}

    {% spaceless %}

    <div id="impress"
        {%- for key, value in presentation.data if value is not empty %} data-{{ key|replace('_', '-') }}="{{ value }}"{%- endfor -%}
        {%- for key, value in presentation.attr if value is not empty %} {{ key }}="{{ value }}"{% endfor -%}
    >
        {%- for slide in presentation.slides -%}
            <div id="{{ slide.id }}"
                {%- for key, value in slide.data if value is not empty %} data-{{ key }}="{{ value }}"{%- endfor -%}
                {%- for key, value in slide.attr if value is not empty %} {{ key }}="{{ value | raw }}"{% endfor -%}
            >
                {{- (slide.content|default('&nbsp;'))|raw -}}
            </div>

        {%- endfor -%}

    </div><!-- /#impress -->

    <div class="site-wrapper" id="wrapper">
        <div class="site-wrapper-inner">
            <div class="cover-container">
                <div id="content">
                    {%- block content -%}
                        <div class="inner cover">

                            {%- if (presentation.slides | length) > 1 -%}
                                <div id="arrow_clickable">
                                    <div id="left_arrow_clickable"></div>
                                    <div id="right_arrow_clickable"></div>
                                </div>
                                <div id="arrow_container">
                                    <div id="left_arrow"><span class="glyphicon glyphicon-chevron-left"></span></div>
                                    <div id="right_arrow"><span class="glyphicon glyphicon-chevron-right"></span></div>
                                </div>
                            {%- endif -%}

                        </div>
                    {%- endblock -%}
                </div>

                {{ include('_footer.html.twig') }}
            </div>
        </div>
    </div>

    {%- endspaceless -%}

{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('js/impress.js') }}"></script>
    <script src="{{ asset('js/main_impress.js') }}" type="text/javascript"></script>
{% endblock %}
